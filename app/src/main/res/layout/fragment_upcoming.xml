<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".Fragment.UpcomingFragment">
    <androidx.cardview.widget.CardView
        app:cardElevation="80dp"
        android:id="@+id/cardView"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <FrameLayout
                android:id="@+id/progressBarHolder"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                android:alpha="0.4"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    />

            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:padding="10dp"
                android:textSize="20sp"
                android:background="@drawable/booking_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gym_logo"

                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/gym_name"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/gym_date"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="10dp"
                    android:text="@string/cancel_booking"
                    android:id="@+id/cancel_booking"
                    android:layout_gravity="end"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
<TextView
    android:visibility="gone"
    android:text="@string/no_booking"
    android:layout_centerInParent="true"
    android:id="@+id/no_booking"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</RelativeLayout>