<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.SessionInfoFragment">

    <TableLayout
        android:id="@+id/table_layout2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_marginBottom="10dp"
                android:text="@string/start_session"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/start_session"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_background"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginBottom="10dp"
                android:text="@string/add_exercise"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/add_exercise"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_background"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginBottom="10dp"
                android:text="@string/weight_profile"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/weight_profile"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_background"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        </TableRow>
        <TableRow>

            <TextView
                android:layout_marginBottom="10dp"
                android:text="@string/repeatation"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/repeatation"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_background"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        </TableRow>
        <TableRow>

            <TextView
                android:layout_marginBottom="10dp"
                android:text="@string/remarks"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/remarks"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_background"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/save_profile"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/button_view"
        android:text="@string/save"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />
</LinearLayout>